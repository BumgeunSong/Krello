
platform :ios, '11.0'

target 'Krello' do
  use_frameworks!

  # Pods for Krello
  pod 'SwiftLint'
  
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'FirebaseFirestoreSwift', '9.0.0'

  target 'KrelloTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'SwiftLint'
    
    pod 'Firebase/Core'
    pod 'Firebase/Auth'
    pod 'Firebase/Firestore'
  end

end
